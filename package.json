{
  "name": "kiite-wo-kikitai",
  "version": "1.1.0",
  "description": "Kiite Cafeをバックグラウンド再生できるデスクトップアプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "minimarimo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "jp.yuukei.kiite-wo-kikitai",
    "productName": "Kiite Cafe Wo Kikitai(Desktop)",
    "files": [
      "main.js",
      "injector.js",
      "patcher.js",
      "package.json",
      "tray-icon.png",
      "icon.ico",
      "icon.icns"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  }
}
